<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/borde"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chaosphoenix.kangurooguard.ui.activities.DataStudent"
    android:scrollbars="vertical">

    <LinearLayout
        android:id="@+id/editTextLayout"
        style="@style/AuthFieldContainer">

        <EditText
            android:id="@+id/etxtName"
            style="@style/AuthEditText"
            android:inputType="text"
            android:hint="@string/txtnamestudent">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/etxtSurname"
            style="@style/AuthEditText"
            android:inputType="text"
            android:hint="@string/txtsurname"/>

        <EditText
            android:id="@+id/etxtTelephone"
            style="@style/AuthEditText"
            android:inputType="number"
            android:hint="@string/txttelephone" />

        <EditText
            android:id="@+id/etxtEmail"
            style="@style/AuthEditText"
            android:inputType="textEmailAddress"
            android:hint="@string/txtemail" />

        <EditText
            android:id="@+id/etxtRoute"
            style="@style/AuthEditText"
            android:inputType="text"
            android:hint="@string/txtroute" />

        <EditText
            android:id="@+id/etxtCommentStudents"
            style="@style/AuthEditText"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:hint="@string/txtcommentstudent"
            android:lines="5"
            android:scrollbars="vertical"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bntListButtons"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:gravity="bottom">

        <Button
            style="@style/AuthButton"
            android:id="@+id/btnaccept"
            android:layout_weight="1"
            android:text="@string/accept"
            android:onClick="savePerson" />

        <Button
            style="@style/AuthButton"
            android:id="@+id/btncancel"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:onClick="cancelClick" />
    </LinearLayout>

</LinearLayout>