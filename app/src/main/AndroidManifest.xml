<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sistemasikanguro.kangurooguard" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.activities.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ui.activities.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ui.activities.OptionActivity"
            android:label="@string/title_option_activity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ui.activities.DataUserActivity"
            android:label="@string/title_activity_datauser"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.activities.OptionActivity">
        </activity>
        <activity
            android:name=".ui.activities.DataStudentActivity"
            android:label="@string/title_activity_datastudent"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ui.activities.PasswordActivity"
            android:label="@string/title_activity_password"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.activities.OptionActivity" >
        </activity>
        <activity
            android:name=".ui.activities.StudentsActivity"
            android:label="@string/title_activity_students"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.activities.OptionActivity" >
        </activity>
        <activity
            android:name=".ui.activities.RoutesActivity"
            android:label="@string/title_activity_routes"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.activities.OptionActivity" >
        </activity>
        <activity
            android:name=".ui.activities.AddRouteActivity"
            android:label="@string/title_activity_addroute"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ui.activities.SplashActivity"
            android:label="@string/title_activity_splash"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
